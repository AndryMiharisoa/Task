{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card" style="width: 50%; margin: auto;">
                <div class="card-header text-center">
                    <h2>Edit User</h2>
                </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.email, {
                                    'label': 'Email',
                                    'attr': {'class': 'form-control', 'placeholder': 'Entrez email'}
                                }) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.password, {
                                    'label': 'Mot ',
                                    'attr': {'class': 'form-control', 'placeholder': 'Entrez nouveau mot de pass'}
                                }) }}
                            </div>
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-save"></i>Enregistre
                            </button>
                        {{ form_end(form) }}
                    </div>
                    <div class="card-footer text-center">
                        <a href="{{ path('app_user_list') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour sur liste
                        </a>
                    </div>
        </div>
    </div>

    
{% endblock %}

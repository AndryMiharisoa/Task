{# templates/todo/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer un Todo{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="mb-4 text-center">Créer un tache</h4>

            <div class="card shadow-sm p-4">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.title, 'Titre', { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(form.title, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.CreatedAt, 'Date de création', { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(form.CreatedAt, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="form-check mb-3">
                        {{ form_widget(form.isCompleted, { 'attr': { 'class': 'form-check-input' } }) }}
                        {{ form_label(form.isCompleted, 'Complété', { 'label_attr': { 'class': 'form-check-label' } }) }}
                    </div>
                    <button class="btn btn-primary w-100">Enregistrer</button>
                {{ form_end(form) }}
            </div>

            <a href="{{ path('app_task') }}" class="btn btn-secondary mt-3 w-100">Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}
